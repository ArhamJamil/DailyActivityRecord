{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/api/server.js", "src/components/RecordTable.js", "src/components/Register.js", "src/components/Login.js", "src/pages/recordData.tsx", "src/pages/_document.tsx", "src/pages/_app.js", "src/components/Navbar.js", "src/pages/index.js"],
  "exclude": ["node_modules"]
}
